<%= render_table do %>
  <%= table_head do %>
    <%= table_header '', class: 'w-2' %>
    <%= table_header 'Notification' %>
  <% end %>
  <%= table_body do %>
    <% @notifications.each do |notification| %>
      <%= table_row do %>
        <%= table_column do %>
          <%= render_form_for notification, method: :patch do |f| %>
            <%= f.checkbox :read, label: nil %>
          <% end %>
        <% end %>
        <%= table_column notification.content %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
