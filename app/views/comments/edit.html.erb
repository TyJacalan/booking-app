                <div class="flex flex-col space-y-2">
                    <%= f.label :subject, "Edit Subject", class: "text-sm font-medium" %>
                    <%= f.text_field :subject, class: "w-full p-2 border rounded" %>
                    <%= f.submit "Update", class: "bg-blue-500 text-white p-2 rounded" %>
                </div>
            <% end %>
        </div>
