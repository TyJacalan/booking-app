                    <% user = User.find_by(id: user_id) %>
                    <li class="text-sm"><%= user.full_name %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>