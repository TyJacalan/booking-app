<div id="<%= options[:id] %>" class="h-full w-full min-w-[350px] p-6 overflow-hidden rounded-lg ring-1 ring-black/5 dark:ring-white/10 bg-card text-card-foreground shadow-sm <%= options[:class] %>">
  <% if title || subtitle %>
  <div class="flex flex-col space-y-2">
    <% if title %>
      <h3 class="text-2xl font-semibold leading-none tracking-tight"><%= title %></h3>
    <% end %>
    <% if subtitle %>
      <p class="text-sm text-muted-foreground"><%= subtitle %></p>
    <% end %>
  </div>
  <% end %>
  <% if !block && !title %>
    <%= content_tag( :div ){ body } %>
  <% elsif !block %>
    <%= content_tag( :div, class: "mt-2" ){ body } %>
  <% else %>
    <%= body %>
  <% end %>
  <% if footer %><footer class="mx-6 mb-6"><%= footer %></footer><% end %>
</div>
