<%= render 'devise/shared/auth_head' %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: 'flex flex-col gap-4') do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    
    <%= render 'components/form/required_label', f: f, attribute: :password %>
    <%= f.password_field :password, autofocus: true, autocomplete: 'new-password' %>

    <%= render 'components/form/required_label', f: f, attribute: :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>

    <%= f.submit 'Change my password', class: 'w-full' %>
<% end %>
