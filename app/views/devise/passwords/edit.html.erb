<%= render 'devise/shared/auth_head' %>

<%= render_form_for(resource, as: resource_name, url: password_path(resource_name), method: :put, class: 'flex flex-col gap-4') do |f| %>
    <%= f.hidden_field :reset_password_token %>
    
    <%= f.label :password, required: true %>
    <%= f.password_field :password, autofocus: true, autocomplete: 'new-password' %>
    <%= f.error_message :password %>

    <%= f.label :password_confirmation, required: true %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
    <%= f.error_message :password_confirmation %>

    <%= f.submit 'Change my password', class: 'w-full' %>
<% end %>
