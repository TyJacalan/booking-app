<% content_for(:auth_header) do %>
  <% if devise_mapping.registerable? && controller_name == 'sessions' %>
    <%= render 'components/text/header' do %>Sign In<% end %>
    <%= render 'components/text/text_with_link',
      text: 'Or',
      link_text: 'create your free account',
      path: new_registration_path(resource_name) 
    %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name == 'registrations' %>
    <% if action_name == 'new' || action_name == 'create' %>
      <%= render 'components/text/header' do %>Sign Up<% end %>
      <%= render 'components/text/text_with_link',
        text: 'Already have an account?',
        link_text: 'Login',
        path: new_session_path(resource_name)
      %>
    <% end %>
    <% if action_name == 'edit' %>
      <%= render 'components/text/header' do %>Edit your profile<% end %>
      <%= render 'components/text/text_with_link',
        text: 'Back to',
        link_text: 'home',
        path: root_path
      %>
    <% end %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name == 'passwords' %>
    <% if action_name == 'new' || action_name == 'create' %>
      <%= render 'components/text/header' do %>Forgot your password?<% end %>
      <%= render 'components/text/text_with_link',
        text: 'Remember your password?',
        link_text: 'Back to login',
        path: new_session_path(resource_name)
      %>
    <% end %>
    <% if action_name == 'edit' %>
      <%= render 'components/text/header' do %>Set a new password<% end %>
    <% end %>
  <% end %>

<% end %>
