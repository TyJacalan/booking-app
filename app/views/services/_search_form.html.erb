<div class="flex justify-center">
  <form class="flex w-2/3 h-full mt-14 overflow-x-auto" action="<%= services_path %>" method="get">
      <%= search_form_for @q, url: services_path, method: :get do |f| %>
        <div class="form-group w-full flex flex-row justify-center items-center shadow-l">
          <%= f.select :categories_title_cont, options_for_select(Category.pluck(:title, :title), params.dig(:q, :categories_title_cont)), { include_blank: 'Category'}, class: "text-gray-500 p-5 pl-12 border border-gray-300 border-r-transparent rounded-l-full bg-gray-50 focus:ring-yellow-500 focus:border-yellow-500 hover:bg-gray-100 dark:text-slate-50 dark:bg-black select-placeholder-gray-300 dark:select.placeholder-gray-100" %>          
          <%= f.search_field :title_cont, class: "block w-full h-16 p-8 pl-12 text-sm text-gray-900 border border-gray-300 border-x-transparent bg-gray-50 focus:ring-yellow-500 focus:border-yellow-500 dark:text-slate-50 dark:bg-black placeholder-gray-300 hover:bg-gray-100 dark:placeholder-gray-100", placeholder: "What", value: params.dig(:q, :title_cont) %>
          <%= f.search_field :user_city_cont, class: "block w-full h-16 p-8 pl-12 text-sm text-gray-900 border border-gray-300 border-x-transparent bg-gray-50 focus:ring-yellow-500 focus:border-yellow-500 dark:text-slate-50 dark:bg-black placeholder-gray-300 hover:bg-gray-100 dark:placeholder-gray-100", placeholder: "Where", value: params.dig(:q, :user_city_cont) %>
          <%= f.search_field :user_full_name_cont, class: "block w-full h-16 p-8 pl-12 text-sm text-gray-900 border border-gray-300 border-l-transparent rounded-r-full bg-gray-50 focus:ring-yellow-500 focus:border-yellow-500 dark:text-slate-50 dark:bg-black hover:bg-gray-100 placeholder-gray-300 dark:placeholder-gray-100", placeholder: "Who", value: params.dig(:q, :user_full_name_cont) %>

          <span class="relative right-14 bottom-4">
            <% if params[:q].present? %>
              <%= link_to 'x', root_path, class: "text-primary text-xl absolute right-2 dark:text-white" %>
            <% end %>
          </span>

          <%= button_tag(type: 'submit', class: "text-white rounded-full relative right-14 bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium text-sm px-4 py-4 dark:bg-primary") do %>
            <%= content_tag(:svg, class: "w-4 h-4 text-white", aria: { hidden: true }, xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 20 20") do %>
              <%= content_tag(:path, nil, stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", d: "m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z") %>
            <% end %>
          <% end %>

        </div>
      <% end %>
  </form>
</div>