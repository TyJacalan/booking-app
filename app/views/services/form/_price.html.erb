<div class="p-2 mx-16 md:mx-24 mt-10 mb-10">
  <h2 class="font-semibold text-4xl p-4">Set your price</h2>
  <div class="container mx-auto flex flex-wrap justify-center items-start gap-2 mt-6">
    <%= render_card do %>
      <div class="p-6 pt-0">
        <%= f.label :price, required: true %>
        <%= f.number_field :price, id: 'service_price', value: session[:price], placeholder: "0.00" %>
      </div>
    <% end %>
  </div>
</div>
