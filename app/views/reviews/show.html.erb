<div>
  <div id="divider"></div>
  <div id="service_rating_container">
    <%= turbo_frame_tag "#service_{service.id}_overall_service_rating", src: service_service_id_overall_service_rating_path(service_id) do %>
      <%= turbo_stream_from "#{service_id}/overall_service_rating" %>
      <!-- Content for overall service rating (assuming it's dynamic) -->
      <div id="overall_service_rating">
        <!-- Insert dynamic content here -->
      </div>
    <% end %>
  </div>
  <div id="divider"></div>
  <div id="reviews-container">
    <%= render_dialog do %>
      <%= dialog_trigger do %>
        <-- dynamic number of reviews -->
        <%= render_button("Open Reviews", variant: :outline, class: 'open-reviews-button') %>
      <% end %>
      
      <%= dialog_content id: "reviews-modal-content" do %>
        <div class="flex">
          <div>
            <%= turbo_frame_tag "#service_{service.id}_overall_service_rating", src: service_service_id_overall_service_rating_path(service_id) do %>
              <%= turbo_stream_from "#{service_id}/overall_service_rating" %>
              <!-- Content for overall service rating (assuming it's dynamic) -->
              <div id="overall_service_rating">
                <!-- Insert dynamic content here -->
              </div>
            <% end %>
          </div>
          <div>
            <!-- Form for search (assuming it's here) -->
            <!-- Button to toggle from latest to top reviews (assuming it's here) -->
            
            <%= turbo_frame_tag "#service_{service.id}_reviews", src: service_service_id_reviews_path(service_id) do %>
              <%= turbo_stream_from "#{service_id}/reviews" %>
              <!-- Container for reviews (assuming it's dynamic) -->
              <div id="reviews">
                <!-- Reviews will be dynamically loaded here -->
                <!-- Ensure new reviews append without scrolling to the top -->
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>