<div class="w-full flex justify-center">
    <div class="w-1/2">
        <%= render partial: 'reviews/review_modal', locals: { review: review, user: review.client } %>

        <div class="max-h-[70vh] overflow-y-auto">
            <% comments.each do |comment| %>
                <%= render partial: 'comments/comment', locals: { client: comment.client, freelancer: comment.freelancer, comment: comment, review: review} %>
            <% end %>
        </div>
        <div class="mt-8">
            <%= turbo_frame_tag dom_id(review, :new_comment), src: new_review_comment_path(review) do %>
            <% end %>
        </div>
    </div>
</div>